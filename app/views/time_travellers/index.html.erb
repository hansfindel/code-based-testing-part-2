<h1>Listing time_travellers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Damage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_travellers.each do |time_traveller| %>
      <tr>
        <td><%= time_traveller.name %></td>
        <td><%= time_traveller.damage %></td>
        <td><%= link_to 'Show', time_traveller %></td>
        <td><%= link_to 'Edit', edit_time_traveller_path(time_traveller) %></td>
        <td><%= link_to 'Destroy', time_traveller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time traveller', new_time_traveller_path %>
